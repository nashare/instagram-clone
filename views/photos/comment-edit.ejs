<!DOCTYPE html>
<html>
<%- include('../partials/head') %>
<body>
    <%- include('../partials/header') %>
    <main>
        <h1>Edit Comment</h1>
        <form method="POST" action="/photos/<%= photo._id %>/comments/<%= comment._id %>?_method=PUT">
            <lable>Edit Comment
            <textarea name="text" required><%= comment.text %></textarea>
            </lable>
            <button type="submit">Update</button>
        </form>
        <form method="POST" action="/photos/<%= photo._id %>/comments/<%= comment._id %>?_method=DELETE">
            <button type="submit">Delete</button>
        </form>
    </main>
    <%- include('../partials/footer') %>
</body>
</html>